package Collection;

import java.util.ArrayList;

public class Lista {
	public static void main(String[] args) {
		
		ArrayList<Usuario> lista = new ArrayList<>(); 
		
		Usuario u1 = new Usuario("Lara");
		
		lista.add(u1);
		lista.add(new Usuario("Jorge"));
		lista.add(new Usuario("John"));
		lista.add(new Usuario("Maycon"));
		lista.add(new Usuario("Aquiles"));
		lista.add(new Usuario("Lembro aquela noite o coração inspirado, mas de tão timida o seu texto foi apagado."
				+ "Oh garota, por qu fizesse isto? Todo dia antes de dormir penso nisso."
				+ "Nossos filhos de olhos verdes e castanhos, brigando na hora do banho"
				+ "E eu declarando meu amor ao seu lado, e você toda linda com o aquele cabelo cacheado"
				+ "esta noite sonhei e me declaro, lembrar disto tudo com você é barbaro"
				+ "isto é tão barbaro, que nosso caminho está separado"
				+ "Os olhos dela lembram a floresta, e eu pensando na gente chamando atenção na festa"
				+ "Momento inesquecivel que será sempre lembrado, oh garota por quê aquele texto foi apagado?"));
		
		System.out.println(lista.get(3));
		
		for(Usuario u : lista) {
			System.out.println(u);
			System.out.println();
		}		
		
	}
}