package oo.heranca;

public class Jogo {
	public static void main(String[] args) {

		Heroi j1 = new Heroi();
		//Atribuindo vida
		j1.x = 10;
		j1.y = 10;

		Monstro j2 = new Monstro();
		//Atribuindo vida
		j2.x = 10;
		j2.y = 11;

		// Verificando a quantidade de vida.
		System.out.println("Quantidade de vida: " + j1.vida);
		System.out.println("Quantidade de vida: " + j2.vida);

		// Atacando
		j1.atacar(j2);
		j2.atacar(j1);

		System.out.println("======================");
		System.out.println("Quantidade de vida: " + j1.vida);
		System.out.println("Quantidade de vida: " + j2.vida);

	}
}
