package oo.heranca.desafio;

public class Carro {

	int velocidadeAtual = 10;

	int acelerar() {

		if (velocidadeAtual != 0) {
			return velocidadeAtual += 10;
		} else {
			return 0;
		}
	}

	int freiar() {

		if (velocidadeAtual == 0) {
			return velocidadeAtual = 0;
		}

		else {
			return velocidadeAtual -= 5;
		}

	}

}
