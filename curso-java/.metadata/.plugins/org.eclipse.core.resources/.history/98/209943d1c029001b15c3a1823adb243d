package Classe;

public class DesafioPessoa {
	
	String nomePessoa;
	double pesoPessoa;
	
	//DesafioPessoa(){}
	
	DesafioPessoa(String nome, double pesoPessoa){
		this.nomePessoa = nome;
		this.pesoPessoa = pesoPessoa;		
	}
	
	void comer(DesafioComida dc) {
		if(dc != null) {
			this.pesoPessoa += dc.pesoComida;
		}
		  
	}

}
