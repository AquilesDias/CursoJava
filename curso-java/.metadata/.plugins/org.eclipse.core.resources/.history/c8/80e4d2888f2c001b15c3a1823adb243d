package Arrays;

import java.util.Locale;
import java.util.Scanner;

public class Matriz {
	public static void main(String[] args) {
		 
	  Locale.setDefault(Locale.US);
	  Scanner sc = new Scanner (System.in);
	  
	  System.out.println("Quantos alunos?");
	  int qtAlunos = sc.nextInt();
	  
	  System.out.println("Quantas nota por aluno?");
	  int qtNotas = sc.nextInt();
	  
	  double [][] notaTurma = new double [qtAlunos][qtNotas];
	  
	  double total=0;
	  for(int a=0; a<notaTurma.length; a++) {
		  for(int n=0; n<notaTurma.length; n++) {
			  System.out.println("Informa a nota do" +(n+1)+ "do aluno" +(a+1));
			
			  total += notaTurma[a][n];
		  }
		  double media = total / (qtAlunos * qtNotas);
		  System.out.println("Media do aluno é : " +media );
	  }
	  
	  sc.close();
	}

}
