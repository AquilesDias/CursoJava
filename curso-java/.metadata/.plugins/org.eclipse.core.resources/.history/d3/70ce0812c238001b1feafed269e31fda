	@Override
	public void ligarTurbo() {
		setDelta(35);
	}

	@Override
	public void desligarTurbo() {
		setDelta(15);
	}

	@Override
	public void ligarAr() {

	}

	@Override
	public void desligarAr() {

	}

	public String toString() {
		return "Velocidade atual da Ferrari Ã©: " + velocidadeAtual + " Km/h";
	}
}
