package Classe;

public class ProdutoTeste {

	public static void main(String[] args) {
		
		

		Produto p1 = new Produto("Hamburguer", 12.90 );	
		
		Produto.desconto = 0.35;
		
		
		var p2 = new Produto("Almofada", 30.00);
			
		System.out.println( "Nome Produto: " + p1.nome + "\n Preço: " + p1.preco + "\n Desconto: " + p1.desconto);
		System.out.println("=================================");
		System.out.printf("Nome: %s  \n Preço: %.2f \n Desconto: %.2f \n",p2.nome, p2.preco, p2.desconto);
		System.out.println("=================================");
		
		double precoFinal1 = p1.precoComDesconto();
	    double precoFinal2 = p2.precoComDesconto(0.1);
	   
	    
	    System.out.printf("Preço total : %.2f " , (precoFinal1 + precoFinal2)/2);

	}
	
}