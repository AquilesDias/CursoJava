package fundamentos;

public class TipoString {
	
	public static void main(String[] args) {
		
		String time = "Flamengo";
		
		System.out.println(time.charAt(3));//mostra o char localizado na posição 3
		
		System.out.println(time.length());//mostra o tamanho da variavel
		
		System.out.println(time.equals("Flamengo"));//Faz comparação
		
	    System.out.println(time.equalsIgnoreCase("FLAMengo")); //Ignora letras maiuscula e deixa tudo minusculo
		
		System.out.println(time.startsWith("Flamengo")); //ToLowerCase diminui 
		
	}

}
